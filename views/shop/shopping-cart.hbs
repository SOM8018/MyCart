{{#if products}}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
            {{#each products}}
                 <ul class="list-group-item">
                        <span class="badge">{{this.qty}}</span>
                        <strong>{{this.item.title}}</strong>&emsp13;&emsp13;
                        <img src="{{this.imagepath}}">
                        <span class="label label-success">Rs. {{ this.price }} </span>&emsp13;&emsp13;
                        <div class="btn-group">
                            <button class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown" type="button">Action <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li><a href="#">Reduce by 1</a></li>
                                <li><a href="#">Remove all</a></li>
                            </ul>
                        </div>
                  </ul>
            {{/each}}
           
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong> Total Price: <b>Rs.{{ totalPrice }}</b> </strong>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <a href="/checkout" class="btn btn-success" type="button">CheckOut</a>
    </div>
</div>
{{else}}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
       <h2>No items in cart.</h2>
    </div>
</div>
{{/if}}

